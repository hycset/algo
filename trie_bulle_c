#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void triBulle(int tab[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - 1 - i; j++) {
            if (tab[j] > tab[j + 1]) {
                int temp = tab[j];
                tab[j] = tab[j + 1];
                tab[j + 1] = temp;
            }
        }
    }
}

int main() {
    int n = 5000;
    int tab[5000];   // tableau simple, taille fixe

    srand(time(NULL));   //initialiser le générateur de nombres aléatoires

    // remplir le tableau avec des valeurs aléatoires
    for (int i = 0; i < n; i++) {
        tab[i] = rand();
    }

    clock_t debut = clock();  //temps debut
    triBulle(tab, n);
    clock_t fin = clock();  //---

    printf("Temps tri a bulles : %.2f ms\n",
           (double)(fin - debut) / CLOCKS_PER_SEC * 1000);  //tiks en secondes

    return 0;
}
